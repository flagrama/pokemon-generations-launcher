<Window x:Class="PokeGen.YesNoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="161" Width="305" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="1" />
            <GradientStop Color="#FF6B95C2" Offset="0" />
        </LinearGradientBrush>
    </Window.Background>
    <Canvas Height="120" Name="canvas1" Width="267">
        <Label Canvas.Left="3" Canvas.Top="3" Content="New Update Found!" Cursor="Arrow" FontFamily="Power Red and Green" FontSize="12" Foreground="Black" Height="25"  Width="252" HorizontalContentAlignment="Center" FontWeight="Bold" />
        <TextBlock Canvas.Left="4" Canvas.Top="24" Height="64" Name="textBlock1" Text="Would you like to download the new PokeGen Update?" Width="256" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
        <Button Canvas.Left="12" Canvas.Top="85" Content="Yes" Height="23" Name="button1" Width="96" Focusable="False" Click="button1_Click" />
        <Button Canvas.Left="159" Canvas.Top="85" Content="No" Focusable="False" Height="23" IsEnabled="True" Name="button2" Width="96" Click="button2_Click" />
    </Canvas>
</Window>