<Window x:Class="PokeGen.View.ConnectionFailure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection Failure" Height="161" Width="305" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="1" />
            <GradientStop Color="#FF6B95C2" Offset="0" />
        </LinearGradientBrush>
    </Window.Background>
    <Canvas Height="120" Name="canvas1" Width="267">
        <Label Canvas.Left="3" Canvas.Top="3" Content="Unable to connect to the HTTP server!" Cursor="Arrow" FontFamily="Power Red and Green" FontSize="12" Foreground="Black" Height="25" Name="label13" Width="252" HorizontalContentAlignment="Center" FontWeight="Bold" />
        <TextBlock Canvas.Left="4" Canvas.Top="24" Height="64" Name="textBlock1" Text="Please make sure that you're connected to the internet before starting the launcher, or play offline." Width="256" TextWrapping="WrapWithOverflow" TextAlignment="Center" />
        <Button Canvas.Left="12" Canvas.Top="85" Content="Play Offline" Height="23" Name="button1" Width="96" Focusable="False" Click="button1_Click" />
        <Button Canvas.Left="159" Canvas.Top="85" Content="Select Path" Focusable="False" Height="23" IsEnabled="True" Name="button2" Width="96" Click="button2_Click" />
    </Canvas>
</Window>
